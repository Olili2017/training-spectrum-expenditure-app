<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/addExpenditure"
        android:layout_width="158dp"
        android:layout_height="123dp"
        android:background="@drawable/shape"
        android:padding="10dp"

        android:shadowColor="@color/colorPrimary"
        android:text="Add Expenditure"
        android:textColor="@color/lightgray"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/AddIncome"
        app:layout_constraintHorizontal_bias="0.369"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.245" />

    <Button
        android:id="@+id/AddIncome"
        android:layout_width="145dp"
        android:layout_height="125dp"
        android:background="@drawable/shape"
        android:padding="10dp"

        android:shadowColor="@color/colorPrimary"
        android:text="Add Income"
        android:textColor="@color/lightgray"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.89"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.245" />

    <Button
        android:id="@+id/ViewStatement"
        android:layout_width="348dp"
        android:layout_height="117dp"
        android:background="@drawable/shape"
        android:padding="10dp"

        android:shadowColor="@color/colorPrimary"
        android:text="View Statement"
        android:textColor="@color/lightgray"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.539"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.563" />

    <Button
        android:id="@+id/Welcome"
        android:layout_width="348dp"
        android:layout_height="117dp"
        android:background="@drawable/shape"
        android:padding="10dp"

        android:shadowColor="@color/colorPrimary"
        android:text="Weclome To my First APP"
        android:textColor="@color/lightgray"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.539"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ViewStatement"
        app:layout_constraintVertical_bias="0.397" />
</androidx.constraintlayout.widget.ConstraintLayout>